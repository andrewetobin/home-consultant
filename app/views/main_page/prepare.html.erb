<div class="header-text">
  <h3><b>Client Details</b></h3>
</div>

<div class="address_preparation">
  <p class="field_headers">Name: <%= @property_facade.name %></p>
  <p class="field_headers">Email: <%= @property_facade.email  %> </p>
  <p class="field_headers">Phone: <%= @property_facade.phone  %> </p>
  <p class="field_headers">Map: <a href="<%= @property_facade.map %>">Click for Directions to Property</a> </p>
  <p class="field_headers">Opted In: <%= @property_facade.opted_in %> </p>
  <p class="field_headers">Found Us: <%= @property_facade.found_us %> </p>
  <p class="field_headers">Estimate: </p>
  <p class="estimate_header">Zillow</p>
  <p class="estimates">Zestimate: <%= @property_facade.zestimate %> </p>
  <p class="estimates">Low: <%= @property_facade.z_low %> </p>
  <p class="estimates">High: <%= @property_facade.z_high %> </p>
  <p class="estimate_header">Home Junction</p>
  <p class="estimates">Low: <%= @property_facade.hj_low %> </p>
  <p class="estimates">High: <%= @property_facade.hj_high %> </p>
  <p class="estimates">Regional Avg: <%= @property_facade.hj_avg %> </p>
  <p class="field_headers">Enthusiasm: <%= @property_facade.enthusiasm %> </p>
  <p class="field_headers">Timing: <%= @property_facade.timing %> </p>
  <p class="field_headers">Adopter Type: <%= @property_facade.adopter_type %> </p>
  <p class="field_headers">Updates: <% @property_facade.updates.each do |update| %> </p>
    <p class="update"> <%= update %> </p>
  <% end %>
  <p class="field_headers">Stage: <%= @property_facade.stage %> </p>
  <p class="field_headers">Retainer: <%= @property_facade.retainer %> </p>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag("/main_page", method: "post") do %>
          <%= label_tag(:about_the_home, "About the Home") %>
          <%= text_area_tag(:about) %>
          <%= label_tag(:recommended_price, "Recommended List Price") %>
          <%= text_field_tag(:recommended_price) %>
          <%= label_tag(:update_enthusiasm, "Update Client Enthusiasm") %>
          <%= select_tag(:opciones, options_for_select([['mild', 1], ['medium', 2], ['spicy', 3]]))%>
          <%= label_tag(:buyer_agent_comm, "Buyer Agent Commission") %>
          <%= text_field_tag(:commission) %>
          <%= label_tag(:about_the_seller, "About the Seller") %>
          <%= text_area_tag(:about_seller) %>
          <%= label_tag(:credit_number, "Credit Card Number") %>
          <%= password_field_tag(:cc_number) %>
          <%= label_tag(:credit_expiration, "Credit Card Expiration Date") %>
          <%= month_field(:cc_expiration_month, :cc_expires_year) %>
          <%= submit_tag("Finish") %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="collect_form">

</div>
