<h1>Pricing Location Address</h1>

<div class="location_form">
<%= form_tag("/main_page", method: "post") do %>
  <%= label_tag(:location_address, "Location Address") %>
  <%= text_field_tag(:address) %>
  <%= submit_tag("Find Location") %>
<% end %>
</div>

<div class="collect_form">
<%= form_tag("/main_page", method: "post") do %>
  <%= label_tag(:about_the_home, "About The Home") %>
  <%= text_area_tag(:about) %>
  <%= label_tag(:recommended_price, "Recommended List Price") %>
  <%= text_field_tag(:recommended_price) %>
  <%= label_tag(:update_enthusiasm, "Update Client Enthusiasm") %>
  <%= select_tag(:opciones, options_for_select([['mild', 1], ['medium', 2], ['spicy', 3]]))%>
  <%= label_tag(:buyer_agent_comm, "Buyer Agent Commission") %>
  <%= text_field_tag(:commission) %>
  <%= label_tag(:about_the_seller, "About the Seller") %>
  <%= text_area_tag(:about_seller) %>
  <%= label_tag(:credit_number, "Credit Card Number") %>
  <%= hidden_field(:cc_number, "16") %>
  <%= label_tag(:credit_expiration, "Credit Card Expiration Date") %>
  <%= date_field(:cc_expiration_month, :cc_expires_year) %>
  <%= submit_tag("Finish") %>
<% end %>
</div>
